<!-- app/views/users/show.html.erb -->

<div class="flex flex-col w-full">
  <div id="userInfos">
        <%= render partial: 'shared/user_show', locals: {user: @user} %>

        <div id="bio" class=" bg-white border-gray-200 rounded-lg shadow mt-1 md:w-1/2 mx-auto mb-5 pl-5 pt-2 pb-2">
          <h2 class="font-extrabold text-xl">Bio</h2>
          <p><%= @user.bio %></p>
        </div>
  </div>

  <% @user.posts.each do |post| %>
    <%= render partial: 'shared/post', locals: {post: post} %>
  <% end %>

  <a id="see-all-posts" href="<%= @user.id %>/posts" class="text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 shadow-lg shadow-red-500/50 dark:shadow-lg font-medium rounded-lg text-sm px-5 py-2.5 text-center mx-auto md:w-1/5 w-1/2">See all posts</a>

</div>
