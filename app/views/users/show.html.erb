<!-- app/views/users/show.html.erb -->

<div class="flex flex-col w-full">
  <div id="userInfos">
        <%= render partial: 'shared/user_show', locals: {user: @user} %>

        <div id="bio" class="border-4 border-black mt-4 md:w-1/2 mx-auto mb-5">
          <h2>Bio</h2>
          <p><%= @user.bio %></p>
        </div>
  </div>

  <% @user.posts.each do |post| %>
    <%= render partial: 'shared/post', locals: {post: post} %>
  <% end %>

  <a id="see-all-posts" href="<%= @user.id %>/posts" class="mx-auto font-bold w-5/12 md:w-1/10 mb-5 border-solid border-4 border-gray-500 mt-5">See all posts</a>

</div>
