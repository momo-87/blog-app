<div class="flex flex-col w-full items-center justify-center">
  <h2 class="md:text-4xl font-extrabold text-color-text text-xl">Log in</h2>
  <div class="relative">
    <%= render "devise/shared/links" %>
  </div>
  <div class="w-full">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full"}) do |f| %>
      <div class="field w-4/5 mx-auto md:w-1/3">
        <!-- <%= f.label :email %><br /> -->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Useremail", class: "w-full rounded-lg"  %>
      </div>

      <div class="field w-4/5 mx-auto md:w-1/3 mt-5">
        <!-- <%= f.label :password %><br /> -->
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-full rounded-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-5 w-4/5 mx-auto md:w-1/3">
        <%= f.submit "Log in", class: "text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 shadow-lg shadow-red-500/50 dark:shadow-lg font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
      </div>
    <% end %>
</div>

</div>
